<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <h2>User info</h2>
      
  　　　　　　　　　　　<!--バリデーション-->
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
   
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="book_title">Name</label>
        <!--ここでユーザーの名前の編集-->
        <%= f.text_field :name,class: 'form-control' %>
      </div>
      <label>Image</label>
       <!--ここにファイルを選択-->
      <div>
        <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Introduction</label>
        <!--ここでユーザーのIntroductionの編集-->
        <%= f.text_area :introduction,class: 'form-control' %>
      </div>
      <%=f.submit "Update User",class:'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>